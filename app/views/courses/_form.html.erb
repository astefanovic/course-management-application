<div class="form-horizontal row">
  <%= form_with(model: course, local: true) do |form| %>
    <% if course.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>
  
        <ul>
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <div class='col-md-4'>
        <%= form.label :name %>
        <%= form.text_field :name, id: :course_name %>
      </div>
    </div>
  
    <div class="form-group">
      <div class='col-md-4'>
        <%= form.label :description %>
        <%= form.text_area :description, id: :course_description %>
      </div>
    </div>

    <div class="form-group">
      <div class='col-md-4'>
        <%= form.label :prerequisites %>
        <%= form.text_field :prerequisites, id: :course_prerequisites %>
      </div>
    </div>
        
    <div class="form-group">
      <div class='col-md-4'>
        <%= form.label :locations %>
        <% Location.all.each do |location| %>
          <label class="checkbox-inline">
            <%= check_box_tag "course[locations][]", location.id, course.locations.include?(location) %> <%= location.code %>
          </label>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <div class='col-md-4'>
        <%= form.label :categories %>
        <% Category.all.each do |category| %>
          <label class="checkbox-inline">
            <%= check_box_tag "course[categories][]", category.id, course.categories.include?(category) %> <%= category.name %>
          </label>
        <% end %>
      </div>
    </div>
  
    <div class="form-group">
      <div class='col-md-4'>
        <%= form.label :image %>
        <%= form.file_field :image %>
      </div>
    </div>

    <div class="form-group">
      <div class='col-md-4'>
        <%= form.submit %>
      </div>
    </div>
  <% end %>
</div>
