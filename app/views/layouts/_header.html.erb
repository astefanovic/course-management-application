<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <% if logged_in? %> 
            <%= link_to "Home", courses_path %>
          <% else %> 
            <%= link_to "Home", root_path %>
          <% end %>
        </li>
        <li><%= link_to "Courses", courses_path %></li>
        <li>
          <a href="/categories" class="dropdown-toggle" data-toggle="dropdown" role="button">
            Categories <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <% Category.all.each do |category| %>
              <li><%= link_to category.name, category %></li>
            <% end %>
            <% if (Category.all.count > 0) %>
              <li role="separator" class="divider"></li>
            <% end %>
            <li><%= link_to 'All Categories', categories_path %></li>            
            <% if logged_in? %>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'Create Category', new_category_path %></li>
            <% end %>
          </ul>
        </li>
        <li>
          <a href="/locations" class="dropdown-toggle" data-toggle="dropdown" role="button">
            Locations <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <% Location.all.each do |location| %>
              <li><%= link_to location.code, location %></li>
            <% end %>
            <% if (Location.all.count > 0) %>
              <li role="separator" class="divider"></li>
            <% end %>
            <li><%= link_to 'All Locations', locations_path %></li>            
            <% if logged_in? %>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'Create Location', new_location_path %></li>
            <% end %>
          </ul>
        </li>
        
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_coordinator %></li>
              <li><%= link_to "Edit Profile", edit_coordinator_path(current_coordinator) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>