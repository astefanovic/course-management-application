<h1>Contact Us</h1>

<%= form_for :contact, url: "/contact" do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :sender %>
  </div>

  <div class="form-group">
    <%= form.label :message %>
    <%= form.text_area :message %>
  </div>

  <%= form.submit "Send" %>
<% end %>